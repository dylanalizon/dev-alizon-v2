{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title'|trans }}{{ 'title_ending'|trans }}{% endblock %}

{% block body %}
    <!-- Banner -->
    <section id="banner">
        <div class="inner">
            <h1>{{ 'homepage.h1'|trans|raw }}</h1>
            <p>
                {{ 'homepage.h1_description'|trans }} <br/>
                {{ 'homepage.h1_description_2'|trans|raw }}
            </p>
        </div>
        <video autoplay loop muted playsinline src="{{ asset('build/images/banner02.mp4') }}"></video>
    </section>

    <!-- Highlights -->
    <section class="py-20">
        <div class="inner">
            <header class="special">
                <h2 class="font-gemunu text-4xl">{{ 'homepage.who_i_am.label'|trans }}</h2>
                <p>{{ 'homepage.who_i_am.short_description'|trans }}</p>
            </header>
            <div class="flex flex-wrap md:flex-no-wrap">
                <div class="w-full md:w-auto md:mr-6 text-center" style="min-width: 300px;">
                    <div class="homepage__photo-container">
                        <img class="homepage__photo" src="{{ asset('build/images/photo.jpg') }}" alt="{{ 'homepage.who_i_am.photo_alt'|trans }}">
                    </div>
                </div>
                <div class="w-full md:w-auto flex-grow text-justify">
                    <p>{{ 'homepage.who_i_am.paragraph_1'|trans|raw }}</p>
                    <p class="mt-6">{{ 'homepage.who_i_am.paragraph_2'|trans|raw }}</p>
                    <p class="mt-6">{{ 'homepage.who_i_am.question'|trans|raw }}</p>
                    <div class="mt-6 text-center">
                        <a href="#" class="btn">{{ 'homepage.who_i_am.button'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section id="cta" class="wrapper">
        <div class="inner">
            <h2 class="font-gemunu text-4xl">{{ 'homepage.technologies_skills.label'|trans }}</h2>
            <div class="flex flex-wrap">
                <div class="card w-full md:w-1/2">
                    Test
                </div>
                <div class="card w-full md:w-1/2">
                    Test
                </div>
            </div>
        </div>
    </section>
{% endblock %}
