{% extends 'base.html.twig' %}

{% set disableFooter = true %}
{% set enableDarkHeader = true %}
{% set bodyClass = 'login-page' %}

{% block title %}{{ 'login.title'|trans }}{{ 'title_ending'|trans }}{% endblock %}

{% block body %}
    <section>
        <h1>{{ 'login.h1'|trans }}</h1>
        <form method="POST">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="input-group">
                <input
                        id="email"
                        type="email"
                        value="{{ last_username }}"
                        name="email"
                        autocomplete="off"
                        required
                        autofocus
                />
                <label for="email">{{ 'login.email_label'|trans }}</label>
            </div>
            <div class="input-group">
                <input
                        id="password"
                        type="password"
                        name="password"
                        required
                />
                <label for="password">{{ 'login.password_label'|trans }}</label>
            </div>
            <input type="checkbox" name="_remember_me"> {{ 'login.remember_me'|trans }}
            <button type="submit">{{ 'login.sign_in'|trans }}</button>
        </form>
    </section>
{% endblock %}
